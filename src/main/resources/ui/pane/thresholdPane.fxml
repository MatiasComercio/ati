<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ChoiceBox?>
<fx:root type="ar.edu.itba.ati.idp.ui.controller.pane.ThresholdPaneController"
  xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="10.0">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <HBox alignment="CENTER" spacing="15.0">
    <VBox.margin>
      <Insets/>
    </VBox.margin>
    <VBox alignment="CENTER" layoutX="70.0" layoutY="10.0" spacing="10.0">
      <Label alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
        minWidth="-Infinity" text="Band"/>
      <ChoiceBox fx:id="bandChoiceBox" maxHeight="-Infinity" maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0"/>
    </VBox>
    <Separator orientation="VERTICAL"/>
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
      <Label alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
        minWidth="-Infinity" text="Threshold"/>
      <TextField fx:id="thresholdTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0" promptText="1.0"/>
    </VBox>
  </HBox>
  <Button fx:id="applyButton" disable="true" mnemonicParsing="false" prefWidth="100.0"
    text="Apply" onAction="#handleApply">
    <ar.edu.itba.ati.idp.ui.controller.pane.ThresholdPaneController.margin>
      <Insets top="10.0"/>
    </ar.edu.itba.ati.idp.ui.controller.pane.ThresholdPaneController.margin>
  </Button>
</fx:root>
